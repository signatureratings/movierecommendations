                <a class="dropdown-item" href="http://localhost:3000/profile">Profile</a>
               
              </div>
            </li>
          </ul>
           <% if(isLogin) { %>
          <form class="form-inline my-2 my-lg-0" action="/logout" method="GET">
            <button class="btn btn-danger my-2 my-sm-0" type="submit" id="logout" >Logout</button>
          </form>
           <% } %>
             <% if(!isLogin) { %>
               <form class="form-inline my-2 my-lg-0" action="/signin" method="GET"></form>
               <button class="btn btn-danger my-2 my-sm-0" type="submit" id="logout" >LogIn</button>
                </form>
         <% } %>

