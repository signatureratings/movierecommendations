            <button class="btn btn-success my-2 my-sm-0 mr-5"  onclick="searchMovie()">Search</button>
          </div>
          
          <ul class="navbar-nav mr-3">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle active" href="#" id="currentUser" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
